<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:orientation="vertical"
    android:weightSum="4">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_149sdp"
        android:elevation="@dimen/_4sdp"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/back_appe"
            android:weightSum="4"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.6"
                    android:textColor="@android:color/holo_blue_light"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:id="@+id/username"
                    android:alpha=".8"
                    />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/callImg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:src="@drawable/ic_call"
                    android:scaleType="centerInside"
                    android:scaleX="-1"
                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                >
                <LinearLayout
                    android:id="@+id/userdata"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="3"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/temperature"
                            android:layout_width="0dp"
                            android:src="@drawable/ic_thermometer"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:scaleType="centerInside"
                            android:gravity="center_horizontal|center_vertical"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/temperaturevalue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:gravity="center_horizontal|center_vertical"
                            android:textAlignment="center"
                            android:textSize="@dimen/_21sdp"
                            android:textColor="@android:color/holo_blue_light"
                            />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/gluocose"
                            android:layout_width="0dp"
                            android:src="@drawable/ic_sugar"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:scaleType="centerInside"
                            android:gravity="center_horizontal|center_vertical"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/gluocosevalue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:textAlignment="center"
                            android:gravity="center_horizontal|center_vertical"
                            android:textSize="@dimen/_21sdp"
                            android:textColor="@android:color/holo_blue_light"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="4"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/bloodPressure"
                            android:layout_width="0dp"
                            android:src="@drawable/ic_blood_pressure"
                            android:layout_height="wrap_content"
                            android:text="BloodPressure"
                            android:layout_weight=".6"
                            android:scaleType="centerInside"
                            android:gravity="center_horizontal|center_vertical"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/bloodPressurevalue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/_21sdp"
                            android:gravity="center_horizontal|center_vertical"
                            android:textAlignment="center"
                            android:layout_weight="1.4"
                            android:textColor="@android:color/holo_blue_light"
                            />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/respirationrate"
                            android:layout_width="0dp"
                            android:src="@drawable/ic_lungs"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:scaleType="centerInside"
                            android:gravity="center_horizontal|center_vertical"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/respirationratevalue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:textAlignment="center"
                            android:gravity="center_horizontal|center_vertical"
                            android:textSize="@dimen/_21sdp"
                            android:textColor="@android:color/holo_blue_light"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/heartrate"
                            android:layout_width="0dp"
                            android:src="@drawable/ic_heartbeat"
                            android:layout_height="wrap_content"
                            android:scaleType="centerInside"
                            android:layout_weight=".6"
                            android:gravity="center_horizontal|center_vertical"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/heartratevalue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/_21sdp"
                            android:textAlignment="center"
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_weight="1.4"
                            android:textColor="@android:color/holo_blue_light"
                            />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@android:color/holo_green_light"/>

</LinearLayout>